# DETAB.AWK - AWK de-tabber
#----------------------------------------------------------------------------

index( $0, "\t" ) {  # simple pattern of /\t/ doesn't work!

    blanks = "  "
    tab = length(blanks)

    str = $0

    while( col = index( str, "\t" ) ) {

      str = substr(str,1,col-1) substr(blanks,col%tab) substr(str,col+1)
    }

    $0 = str
}

