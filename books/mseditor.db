%@NL@%
     pAFILE = FileNameToHandle( "A.TXT", NULL );%@NL@%
     pBFILE = FileNameToHandle( "B.TXT", NULL );%@NL@%
     .%@NL@%
     .%@NL@%
     .%@NL@%
